{
    "extends": [
        "eslint:recommended"
    ],
    "rules": {
        "no-var": "warn",
        "camelcase": "warn"
    },
    "overrides": [
        {
            "files": [
                "client/**/*.js"
            ],
            "env": {
                "browser": true,
                "es2022": true
            }
        },
        {
            "files": [
                "server/**/*.js"
            ],
            "env": {
                "node": true,
                "es2022": true
            }
        }
    ]
}